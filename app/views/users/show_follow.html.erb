<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.gravatar_url %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("shared.user_info.view_profile"), @user %></span>
      <span><b>Blogs:</b> <%= @user.blogs.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.gravatar_url), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <div class="custom_a">
        <div class="flickr_pagination">
          <ul class="users follow">
            <%= render @users %>
          </ul>
          <div class="page_info">
            <%= page_entries_info @users %>
          </div>
          <%= will_paginate @users, container: false %>
        </div>
      </div>
    <% end %>
  </div>
</div>
