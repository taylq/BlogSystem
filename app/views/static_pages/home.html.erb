<% if logged_in? %>
  <div class="row">
    <aside class="col-md-8 col-md-offset-2">
      <section class="blog_form">
        <%= render "shared/blog_form" %>
      </section>
    </aside>
    <div class="col-md-8 col-md-offset-2">
      <h3><%= t ".news_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3><%= t ".news_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>
