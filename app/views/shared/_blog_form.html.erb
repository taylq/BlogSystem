<%= form_for @blog do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.text_area :content, placeholder: "Compose new blog..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
