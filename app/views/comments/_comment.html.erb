<% blog.comments.each do |comment| %>
  <div class="load_comment1">
    <%= link_to comment.user.name, comment.user, class: "col-sm-2" %>
    <div class="col-sm-8">
      <%= comment.content %>
      <span class="timestamp1">
        <%= time_ago_in_words comment.created_at %> 
      </span>
    </div>
    <div class="col-sm-2">
      <% if current_user == comment.user %>
        <%= link_to t("blogs.blog.delete"), comment, method: :delete,
          data: {confirm: t("blogs.blog.you_sure")}, remote: true %>
      <% end %>
    </div>
    </br>
  </div>
<% end %>
